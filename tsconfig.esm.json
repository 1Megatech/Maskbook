{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "outDir": "./temp/esm/",
    // "outDir": "./debug/",
    "noEmit": false,
    // "removeComments": true,
    // ! Once you change the plugin config, you have to bump the version of tsBuildInfoFile to clear cache
    "tsBuildInfoFile": "./temp/esm/tsconfig.esm.tsbuildinfo.v1",
    "incremental": true,
    "plugins": [
      {
        "transform": "@magic-works/ttypescript-browser-like-import-transformer",
        "after": true,
        "importHelpers": "/polyfills/ttsclib.js",
        "jsonImport": "inline",
        "folderImport": true,
        "rules": {
          "/(.+)/": {
            "type": "umd",
            "target": "$1",
            "globalObject": "__deps__"
          }
        }
      }
      // Debug use this:
      // {
      //   "transform": "./scripts/gulp/tree-shake-loader.ts",
      //   "import": "transform"
      // }
    ]
  },
  // https://github.com/microsoft/TypeScript/issues/39700
  // "include": [
  //   "./src/extension/options-page/index.tsx",
  //   "./src/content-script.ts",
  //   "./src/background-service.ts",
  //   "./src/extension/popup-page/index.tsx"
  // ]
  "include": ["./src/**/*"]
}
